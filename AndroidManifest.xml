<?xml version="1.0" encoding="utf-8"?>
<manifest package="ca.ualberta.cs.cfudgecounter"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.ualberta.cs.cfudgecounter.CounterMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.cfudgecounter.StatisticsViewActivity"
            android:label="@string/title_activity_statistics_view"
            android:parentActivityName="CounterMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="CounterMainActivity" />
        </activity>
    </application>

</manifest>

